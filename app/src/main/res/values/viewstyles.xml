<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="listItemTitle">
    <item name="android:textSize">@dimen/listItemTitle</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/listItemTitleMarginTop</item>
    <item name="android:layout_marginBottom">@dimen/listItemTitleMarginBottom</item>
    <item name="android:layout_marginLeft">@dimen/listItemTitleMarginLeft</item>
    <item name="android:layout_marginRight">@dimen/listItemTitleMarginLeft</item>
    <item name="android:layout_gravity">bottom</item>
  </style>

  <style name="listItemSubtitle">
    <item name="android:textSize">@dimen/listItemSubTitle</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:alpha">0.54</item>
  </style>

  <style name="listItemSubtitleRight"
      parent="listItemSubtitle">
    <item name="android:layout_gravity">right</item>
  </style>

  <style name="listItemUserComment">
    <item name="android:textSize">@dimen/listItemSubTitle</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:maxLines">2</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="listItemActionButton">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/listItemActionTextSize</item>
    <item name="android:textColor">@color/primary</item>
    <item name="android:padding">@dimen/listItemActionButtonsPadding</item>
  </style>

</resources>